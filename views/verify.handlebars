<form class="form-signin" action="/users/verify" method="POST">
  <h2 class="form-signin-heading">Verify your email</h2>

  <label for="secretToken" class="sr-only">Secret token</label>
  <input type="text" id="secretToken" name="secretToken" class="form-control" placeholder="secretToken" required autofocus>
  
  <button class="btn btn-lg btn-default btn-block" type="submit">Verify</button>
</form>
